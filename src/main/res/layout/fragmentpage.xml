<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arachnisapps.sars.PageFragment">

    <TableLayout
        android:id="@+id/table_vipra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/table_header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textStyle="bold"
            android:background="@color/CornflowerBlue"
            android:gravity="center"
            android:padding="2dip"
            android:text="LECTURE DETAILS"
            android:textColor="@color/Black"
            android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:background="#F5F5F5"
                android:padding="2dip"
                android:layout_marginRight="2dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:background="#F5F5F5"
                android:padding="2dip"
                android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:background="#F5F5F5"
            android:padding="2dip"
            android:layout_marginRight="2dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:background="#F5F5F5"
            android:padding="2dip"
            android:layout_marginRight="2dp"/>
    </TableLayout>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/attstatus"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/table_vipra"
        android:layout_marginTop="20dp"
        android:gravity="center"/>


    <Button android:id="@+id/mark" android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="MARK MY ATTENDANCE"
        android:layout_marginLeft="4.0dip"
        android:background="@color/Green"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginRight="4.0dip"
        android:layout_below="@+id/attstatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
