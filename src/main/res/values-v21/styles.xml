<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/DarkBlue</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Pretheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/Blue</item>
    </style>

</resources>
